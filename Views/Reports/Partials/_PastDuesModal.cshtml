@model IEnumerable<SitioSubicIMS.Web.Models.ViewModels.PastDueViewModel>

<div class="modal fade" id="pastDuesModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Past Dues</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (!Model.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-info-circle fs-4"></i>
                        <p class="mt-2 mb-0">No past dues to display.</p>
                    </div>
                }
                else
                {
                    <div class="row g-2">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="card border border-danger shadow-sm h-100">
                                    <div class="card-body small">
                                        <div class="d-flex justify-content-between">
                                            <strong class="text-dark">@item.AccountName</strong>
                                            <span class="badge bg-danger">₱@item.Balance.ToString("N2")</span>
                                        </div>
                                        <div><strong>Billing #:</strong> @item.BillingNumber</div>
                                        <div><strong>Meter #:</strong> @item.MeterNumber</div>
                                        <div><strong>Period:</strong> @item.BillingPeriod</div>
                                        <div><strong>Due Date:</strong> @item.DueDate.ToString("MMM dd, yyyy")</div>
                                        <div><strong>Days Overdue:</strong> <span class="text-danger fw-bold">@item.DaysOverdue</span></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
