@model IEnumerable<SitioSubicIMS.Web.Models.Account>
<div class="modal fade" id="activeAccountsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Active Accounts</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-sm table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Account Name</th>
                            <th>Account Number</th>
                            <th>Meter Number</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No data to display.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var account in Model)
                            {
                                <tr>
                                    <td>@account.AccountName</td>
                                    <td>@account.AccountNumber</td>
                                    <td>@account.Meter.MeterNumber</td>
                                    <td>@account.Address</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
