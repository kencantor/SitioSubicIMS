@model IEnumerable<SitioSubicIMS.Web.Models.ViewModels.UnpaidBillingViewModel>

<div class="modal fade" id="unpaidBillingsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header">
                <h5 class="modal-title">Unpaid Billings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (!Model.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-info-circle fs-4"></i>
                        <p class="mt-2 mb-0">No unpaid billings to display.</p>
                    </div>
                }
                else
                {
                    <div class="row g-2">
                        @foreach (var item in Model)
                        {
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="card border shadow-sm rounded-3 h-100">
                                    <div class="card-body small">
                                        <div class="d-flex justify-content-between mb-2">
                                            <strong class="text-dark">@item.AccountName</strong>
                                            <span class="badge bg-secondary">Billing #: @item.BillingNumber</span>
                                        </div>
                                        <div><strong>Meter No:</strong> @item.MeterNumber</div>
                                        <div><strong>Period:</strong> @item.Period</div>
                                        <hr />
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Due Amount:</span>
                                            <span class="fw-semibold text-warning">₱@item.DueAmount.ToString("N2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Paid:</span>
                                            <span class="fw-semibold text-success">₱@item.Paid.ToString("N2")</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span class="text-muted">Balance:</span>
                                            <span class="fw-semibold text-danger">₱@item.Balance.ToString("N2")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
